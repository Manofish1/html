<form action="switch.php" method="GET">
    Entre com um número do dia da semana:
    <input type = "number" name ="dia" min="1" max="7">
    <button type="submit">Emviar</button>
</form>
<?php
  //Fórmula base do switch - Atividade 1 do dia da semana
    switch (@$_GET['dia']){
        case 1:
            print "Domingo.";
        break;

        case 2:
            print "Segunda-feira.";
        break;

        case 3:
            print "Terça-feira.";
        break;

        case 4:
            print "Quarta-feira.";
        break;

        case 5:
            print "Quinta-feira.";
        break;

        case 6:
            print "Sexta-feira.";
        break;

        case 7:
            print "Sábado.";
        break;
    }

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

<form action="switch.php" method="GET">
    Escreva uma letra de A a E para exibir sua nota:
    <input type = "text" name ="nota" min="A" max="E">
    <button type="submit">Enviar</button>
</form>
<?php
    //Atividade 2 (Nota com letras)
    switch (@$_GET['nota']){
        case 'A':
            print "Excelente.";
        break;

        case 'B':
            print "Bom.";
        break;

        case 'C':
            print "Regular.";
        break;

        case 'D':
            print "Insuficiente.";
        break;

        case 'E':
            print "Reprovado.";
        break;
    }
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

<form action="switch.php" method="GET">
    Escreva um numero de 1 a 12:
    <input type = "number" name ="mes" min="1" max="12">
    <button type="submit">Enviar</button>
</form>
<?php
    //Atividade 3 (mes)
    switch (@$_GET['mes']){
        case '1':
            print "janeiro.";
        break;

        case '2':
            print "fevereiro.";
        break;

        case '3':
            print "março.";
        break;

        case '4':
            print "abril.";
        break;

        case '5':
            print "maio.";
        break;
        case '6':
            print "junho.";
        break;

        case '7':
            print "julho.";
        break;

        case '8':
            print "agosto.";
        break;

        case '9':
            print "setembro.";
        break;

        case '10':
            print "outubro.";
        break;
        case '11':
            print "novembro."; // melhor mes
        break;

        case '12':
            print "dezembro.";
        break;
        
    }

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

<form action="switch.php" method-"GET"> 
A <input type = "number" name ="a">
B <input type = "number" name ="b">
<select id="c" name="c">
  <option value="som">+</option>
  <option value="sub">-</option>
  <option value="mult">*</option>
  <option value="div">/</option>
</select>
    <button type="submit">Enviar</button>
<form>
<?php

//Atividade 4 - Calculadora com switch
$a = @$_GET['a'];
$b = @$_GET['b'];
switch (@$_GET['c']){
    case 'som': 
        print $a + $b;
     break;

     case 'sub': 
        print $a - $b;
     break;

     case 'mult': 
        print $a * $b;
     break;

     case 'div': 
        print $a / $b;
     break;
    }
